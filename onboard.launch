<launch>
    <!-- Launch the turtlebot itself -->
    <include file="$(find turtlebot_bringup)/launch/minimal.launch"></include>

    <!-- Launch the kinect -->
    <arg name="3d_sensor" default="$(env TURTLEBOT_3D_SENSOR)"/>  <!-- r200, kinect, asus_xtion_pro -->
    <include file="$(find turtlebot_bringup)/launch/3dsensor.launch">
        <arg name="rgb_processing" value="true" />
        <arg name="depth_registration" value="false" />
        <arg name="depth_processing" value="false" />
        
        <!-- We must specify an absolute topic name because if not it will be prefixed by "$(arg camera)".
            Probably is a bug in the nodelet manager: https://github.com/ros/nodelet_core/issues/7 --> 
        <arg name="scan_topic" value="/scan" />
    </include>

    <include file="$(find grace_navigation)/launch/gmapping.launch"></include>
    <!-- Launch the arm controller -->
    <include file="$(find grace_arm_control)/launch/arm_controller.launch"></include>
</launch>